<div class="contact-details">
  <h1><%= @contact.name %></h1>
  <div class="contact-info">
    <p><strong>Phone:</strong> <%= @contact.phone %></p>
    <p><strong>Email:</strong> <%= @contact.email %></p>
    <p><strong>Year Entered:</strong> <%= @contact.year_entered %></p>
    <p><strong>Year Left:</strong> <%= @contact.year_left %></p>
  </div>
  <div class="actions">
    <%= link_to 'Edit Contact', edit_contact_path(@contact), class: 'btn btn-primary' %>
    <%= link_to 'Back to Contacts', contacts_path, class: 'btn btn-secondary' %>
  </div>
</div>
<style>
  .contact-details {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 8px;
    background-color: #f9f9f9;
  }

  .contact-details h1 {
    font-size: 24px;
    margin-bottom: 20px;
    color: #333;
  }

  .contact-info p {
    margin: 10px 0;
    font-size: 16px;
    color: #555;
  }

  .contact-info strong {
    color: #000;
  }

  .actions {
    margin-top: 20px;
    display: flex;
    gap: 10px;
  }

  .btn {
    padding: 10px 15px;
    text-decoration: none;
    border-radius: 4px;
    font-size: 14px;
    text-align: center;
  }

  .btn-primary {
    background-color: #007bff;
    color: #fff;
    border: none;
  }

  .btn-secondary {
    background-color: #6c757d;
    color: #fff;
    border: none;
  }

  .btn:hover {
    opacity: 0.9;
  }
</style>