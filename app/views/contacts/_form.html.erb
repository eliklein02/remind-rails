    previous_x = x.value.length
    previous_y = y.value.length
    x.addEventListener("input", () => {
      console.log(x.value);
      console.log(previous_x)
      if (x.value.length == 2 && previous_x != 3) {
        x.value = x.value + "/"
      }
      if (x.value.length == 5 && previous_x != 6) {
        x.value = x.value + "/"
      }
      previous_x = x.value.length
