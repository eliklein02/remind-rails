<div class="container mx-auto px-4 py-8">
  <div class="flex flex-col items-center">
    <h1 class="text-4xl font-bold mb-10 text-center text-gray-800">Responses</h1>
    <% @responses.each do |r| %>
      <div class="w-full max-w-2xl bg-white shadow-lg rounded-xl overflow-hidden mb-6">
        <div class="bg-gray-100 px-6 py-4 border-b">
          <h2 class="text-lg font-semibold text-gray-900">
            <%= Contact.find_by(phone: r.from)&.name || r.from %>
          </h2>
        </div>
        <div class="px-6 py-4">
          <p class="text-gray-800 text-base mb-3 leading-relaxed">
            <%= r.body %>
          </p>
          <p class="text-sm text-gray-500 italic">
            Sent on <%= r.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>