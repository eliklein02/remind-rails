<div class="container mx-auto px-2 sm:px-4 py-4">
  <h1 class="text-2xl sm:text-4xl font-bold mb-4 text-center text-gray-800">Responses</h1>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @responses.each do |r| %>
      <div class="bg-white shadow rounded-lg overflow-hidden flex flex-col h-full">
        <div class="bg-gray-100 px-4 py-2 border-b">
          <h2 class="text-base font-semibold text-gray-900 truncate">
            <%= Contact.find_by(phone: r.from)&.name || r.from %>
          </h2>
        </div>
        <div class="px-4 py-3 flex-1 flex flex-col justify-between">
          <p class="text-gray-800 text-sm mb-2 break-words">
            <%= r.body %>
          </p>
          <p class="text-xs text-gray-500 italic mt-auto">
            Sent <%= time_ago_in_words(r.created_at) %> ago
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>